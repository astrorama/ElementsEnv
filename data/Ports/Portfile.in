# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4s
# $$Id$$

PortSystem 1.0
PortGroup python 1.0

name            ${project}
version         ${version}
categories      euclid
platforms       darwin
supported_archs	noarch
description     Euclid environment setup
master_sites    http://degauden.isdc.unige.ch/euclid/repo/sources 
checksums           rmd160  ${rmd160} \
                    sha256  ${sha256}




distname       $${name}-$${version}
extract.suffix .tar.gz

extract.cmd       tar
extract.pre_args  -xvzf
extract.post_args 

# use_configure    no



# setyp.py is not compatible with python 2.5 as of 0.7.1
python.versions	26 27

if {$${name} ne $${subport}} {
    # override commands because they add --no-user-cfg which is not supported
    build.cmd       "$${python.bin} setup.py"
    destroot.cmd       "$${python.bin} setup.py"

} 
